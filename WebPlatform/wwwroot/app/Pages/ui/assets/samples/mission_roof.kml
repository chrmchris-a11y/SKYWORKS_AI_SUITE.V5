          <width>2</width>
        </LineStyle>
        <PolyStyle>
          <color>330000ff</color>
        </PolyStyle>
      </Style>
      <Polygon>
        <outerBoundaryIs>
          <LinearRing>
            <coordinates>
              13.3750,52.5280,0
              13.3850,52.5280,0
              13.3850,52.5320,0
              13.3750,52.5320,0
